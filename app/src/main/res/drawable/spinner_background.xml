<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="20dp"
        android:left="-20dp"
        android:right="-20dp"
        android:top="-20dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/redColor"/>

            <stroke
                android:width="20dp"
                android:color="@color/greenColor"/>
        </shape>
    </item>
</layer-list>

