<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".game.GameMainActivity"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/game_main_explain"
                android:padding="30dp"
                android:textColor="#050B35"
                android:background="#AEF8F8F8"
                android:textSize="18dp"
                android:layout_marginBottom="40dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="35dp"
                app:cardBackgroundColor="#9CCC65"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_gameTitle2"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:layout_marginBottom="20dp"
                            android:text="@string/game_main_game1"
                            android:textColor="#F1F8E9"
                            android:textSize="32dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_toast1"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_game_menu"
                            android:elevation="0dp"
                            android:text="\?"
                            android:textStyle="bold"
                            android:onClick="OnClickHandler"
                            android:textColor="#689F38"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_to_game1_lv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_game_menu"
                            android:elevation="0dp"
                            android:text="@string/game_main_lv1"
                            android:textColor="#689F38"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btn_to_game1_lv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/btn_game_menu"
                            android:text="@string/game_main_lv2"
                            android:textColor="#689F38"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btn_to_game1_lv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_game_menu"
                            android:text="@string/game_main_lv3"
                            android:textColor="#689F38"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="#66BB6A"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="35dp"
                    android:paddingVertical="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_gameTitle"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:layout_marginBottom="20dp"
                            android:text="@string/game_main_game2"
                            android:textColor="#F1F8E9"
                            android:textSize="32dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_toast2"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_game_menu"
                            android:elevation="0dp"
                            android:text="\?"
                            android:textStyle="bold"
                            android:onClick="OnClickHandler"
                            android:textColor="#689F38"
                            android:textSize="16dp" />


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_to_game2_lv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_game_menu"
                            android:elevation="0dp"
                            android:text="@string/game_main_lv1"
                            android:textColor="#4CAF50"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btn_to_game2_lv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/btn_game_menu"
                            android:text="@string/game_main_lv2"
                            android:textColor="#4CAF50"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btn_to_game2_lv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_game_menu"
                            android:text="@string/game_main_lv3"
                            android:textColor="#4CAF50"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#26A69A"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="70dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_gameTitle3"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:layout_marginBottom="20dp"
                            android:text="@string/game_main_game3"
                            android:textColor="#F1F8E9"
                            android:textSize="32dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_toast3"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_game_menu"
                            android:elevation="0dp"
                            android:text="\?"
                            android:textStyle="bold"
                            android:onClick="OnClickHandler"
                            android:textColor="#689F38"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_to_game3_lv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_game_menu"
                            android:text="@string/game_main_start"
                            android:textColor="#009688"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>