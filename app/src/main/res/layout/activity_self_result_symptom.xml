<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".self_diagnosis.SelfResultSymptomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_toDate"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:text="날짜순"
            android:background="#00ff0000"
            android:textColor="#989C98"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/btn_toSymptom"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:text="증상별"
            android:textStyle="bold"
            android:background="#00ff0000"
            android:textColor="#265A28"
            android:textSize="25dp"/>

    </LinearLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="374dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/spinner_background"
        android:entries="@array/DISEASES_LABEL"
        android:spinnerMode="dialog"
        android:theme="@style/SpinnerTheme" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="412dp"
        android:layout_height="630dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/btn_toSymptom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_self_result"
                android:layout_width="373dp"
                android:layout_height="517dp"
                android:layout_margin="16dp"
                tools:listitem="@layout/item_self_diagnosis_result_container_v2" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>