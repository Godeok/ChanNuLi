<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tutorial.ui.fragment.TutorialThirdStepFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/yearTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/midLightTextColor"
        app:counterTextColor="@color/midLightTextColor"
        app:boxStrokeColor="@color/primaryDarkColor"
        app:hintTextColor="@color/primaryDarkColor"
        android:hint="년도 입력">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </com.google.android.material.textfield.TextInputLayout>

</FrameLayout>