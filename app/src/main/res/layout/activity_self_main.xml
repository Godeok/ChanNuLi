<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SelfMain2"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"
            android:textColor="#000000"
            android:text="자가진단"/>

        <Button
            android:id="@+id/btn_01"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_square_green"
            android:textSize="30dp"
            android:text="고혈압"/>

        <Button
            android:id="@+id/btn_02"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_square_green"
            android:textSize="30dp"
            android:text="골관절염"/>

        <Button
            android:id="@+id/btn_03"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_square_green"
            android:textSize="30dp"
            android:text="고지혈증"/>

        <Button
            android:id="@+id/btn_04"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_square_green"
            android:textSize="30dp"
            android:text="요통, 좌골신경통"/>

        <Button
            android:id="@+id/btn_05"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_square_green"
            android:textSize="30dp"
            android:text="당뇨병"/>

        <Button
            android:id="@+id/btn_06"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_square_green"
            android:textSize="30dp"
            android:text="골다공증"/>

        <Button
            android:id="@+id/btn_07"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_square_green"
            android:layout_marginBottom="40dp"
            android:text="치매"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="자가진단 결과 확인"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_chkDate"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_square_green"
                android:text="날짜순"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_chkSymptom"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_square_green"
                android:text="증상별"
                android:textSize="30dp" />

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#00ff0000"/>
    </LinearLayout>
</ScrollView>