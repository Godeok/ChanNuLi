<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".tutorial.ui.fragment.TutorialSecondStepFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/manBtn"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/btn_gender"
                android:padding="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/img_person_man" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/man"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/midLightTextColor"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/womanBtn"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/btn_gender"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/img_person_woman" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/woman"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/midLightTextColor"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

