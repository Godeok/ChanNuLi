<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/primary2Color</item>
        <item name="colorPrimaryDark">@color/defaultDarkColor</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarTabBarStyle">@style/AppTheme.TabTheme</item>
        <item name="android:windowBackground">@color/whiteColor</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 액션바 테마 -->
    <style name="AppTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="background">@color/whiteColor</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBarTitle</item>
    </style>

    <!-- 액션바 X 테마 -->
    <style name="AppTheme.NoActionBar" parent="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 액션바 타이틀 테마 -->
    <style name="AppTheme.ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/actionbar_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MypageTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/primary2Color</item>
        <item name="colorPrimaryDark">@color/defaultDarkColor</item>
        <item name="actionBarStyle">@style/MypageTheme.ActionBar</item>
        <item name="android:windowBackground">@color/whiteColor</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- mypage 액션바 테마 -->
    <style name="MypageTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="background">@color/primaryColor</item>
        <item name="titleTextStyle">@style/MypageTheme.ActionBarTitle</item>
    </style>

    <!-- mypage 액션바 타이틀 테마 -->
    <style name="MypageTheme.ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/actionbar_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <!-- main 화면 button textview 테마 -->
    <style name="AppTheme.Main.Button.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 탭 테마 -->
    <style name="AppTheme.TabTheme" parent="Theme.MaterialComponents.Light">
        <item name="tabPaddingStart">@dimen/tab_padding</item>
        <item name="tabPaddingEnd">@dimen/tab_padding</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_size</item>
        <item name="tabIndicatorColor">@color/primaryColor</item>
        <item name="tabSelectedTextColor">@color/primaryColor</item>
        <item name="tabTextAppearance">@style/AppTheme.TabTextAppearance</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
    </style>

    <!-- 탭 텍스트 테마 -->
    <style name="AppTheme.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>

    <!-- 텍스트 인풋 레이아웃 테마 -->
    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/midLightTextColor</item>
        <item name="counterTextColor">@color/midLightTextColor</item>
        <item name="boxStrokeColor">@color/primaryDarkColor</item>
        <item name="hintTextColor">@color/primaryDarkColor</item>
        <item name="errorTextColor">@color/redColor</item>
        <item name="boxStrokeErrorColor">@color/redColor</item>
        <item name="errorIconTint">@color/redColor</item>
        <item name="singleLine">true</item>
    </style>

    <!-- mypage 화면 chip 테마 -->
    <style name="AppTheme.MyPage.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/primaryLightColor</item>
        <item name="chipStrokeColor">@color/primary2Color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/primary2Color</item>
        <item name="chipMinTouchTargetSize">43dp</item>
    </style>

    <!-- reset dialog 테마 -->
    <style name="AppTheme.ResetDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:textColor">@color/defaultDarkColor</item>
        <item name="android:textColorPrimary">@color/midLightTextColor</item>
        <item name="android:colorAccent">@color/redColor</item>
    </style>

    <!-- 체크박스 테마 -->
    <style name="checkbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/primaryColor</item>
        <item name="android:colorControlActivated">@color/primaryDarkColor</item>
        <item name="android:colorControlHighlight">@color/primary2Color</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="SpinnerDivideStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/dividerColor</item>     <!-- divider 색 -->
        <item name="android:dividerHeight">2dp</item>   <!-- divider 높이 -->
    </style>

    <style name="SpinnerTheme" parent="Theme.MaterialComponents">
        <item name="android:dropDownListViewStyle">@style/SpinnerDivideStyle</item>
    </style>

    <style name="spinnerTheme">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#00E676</item>
        <item name="android:textSize">@dimen/number_picker_text_size</item>
    </style>
</resources>