<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/primary2Color</item>
        <item name="android:colorPrimaryDark">@color/defaultDarkColor</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarTabBarStyle">@style/AppTheme.TabTheme</item>
        <item name="android:windowBackground">@color/whiteColor</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 액션바 테마 -->
    <style name="AppTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="background">@color/whiteColor</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBarTitle</item>
    </style>

    <!-- 액션바 타이틀 테마 -->
    <style name="AppTheme.ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/actionbar_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 탭 테마 -->
    <style name="AppTheme.TabTheme" parent="Theme.MaterialComponents.Light">
        <item name="tabPaddingStart">20dp</item>
        <item name="tabPaddingEnd">20dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_size</item>
        <item name="tabIndicatorColor">@color/primaryColor</item>
        <item name="tabSelectedTextColor">@color/primaryColor</item>
        <item name="tabTextAppearance">@style/AppTheme.TabTextAppearance</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
    </style>

    <!-- 탭 텍스트 테마 -->
    <style name="AppTheme.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>

    <style name="SpinnerDivideStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#000000</item>     <!-- divider 색 -->
        <item name="android:dividerHeight">2dp</item>   <!-- divider 높이 -->
    </style>

    <style name="SpinnerTheme" parent="Theme.MaterialComponents">
        <item name="android:dropDownListViewStyle">@style/SpinnerDivideStyle</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />


    <style name="spinnerTheme">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#00E676</item>
        <item name="android:textSize">@dimen/number_picker_text_size</item>
    </style>

    <style name="Chip" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="checkbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/primaryColor</item>
        <item name="android:colorControlActivated">@color/primary3Color</item>
        <item name="android:colorControlHighlight">@color/primary2Color</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <dimen name="tab_max_width">100dp</dimen>
</resources>