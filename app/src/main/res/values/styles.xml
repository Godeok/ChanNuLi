<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SpinnerDivideStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#000000</item>     <!-- divider 색 -->
        <item name="android:dividerHeight">2dp</item>   <!-- divider 높이 -->
    </style>

    <style name="SpinnerTheme" parent="Theme.MaterialComponents">
        <item name="android:dropDownListViewStyle">@style/SpinnerDivideStyle</item>
    </style>

    <style name="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/colorWhite</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="TabTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">#5E35B1</item>                                <!-- 배경 -->
        <item name="android:textColorPrimary">#5E35B1</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@android:color/secondary_text_dark</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">#5E35B1</item>                    <!-- 하단 움직이는 바 색-->
    </style>

    <style name="spinnerTheme">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#00E676</item>
        <item name="android:textSize">@dimen/number_picker_text_size</item>
    </style>

    <style name="Chip" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">24sp</item>
    </style>
</resources>